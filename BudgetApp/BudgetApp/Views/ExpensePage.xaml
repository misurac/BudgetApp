<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.Views.ExpensePage">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Label Text="Add Your New Expense" VerticalOptions="Center" HorizontalOptions="Center"
               FontSize="Title"/>

        <Entry Placeholder="Describe your expense" CursorPosition="10" Grid.Row="1" 
               Margin="30,0,0,0"
               HorizontalOptions="StartAndExpand"
               TextChanged="ExpenseDescriptionTextChanged"/>



    </Grid>
</ContentPage>